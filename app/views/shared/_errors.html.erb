<% if obj.errors.any? %>
<div class="alert alert-danger" role="alert">
	<h3 class="panel-title">
		<%= pluralize(obj.errors.count, "error") %>
		prohibated this article from being saved:
	</h3>
	<div class="panel-body">
		<ul>
			<% obj.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
</div>
<% end %>