
<h1 align="center">Listing all articles</h1>

	<% @articles.each do |article| %>

		<div class="card bg-light">
		  <div class="card-body">
		    <%= link_to article.title, article_path(article), class: "article-title" %><hr />
		    <div class="article-description"><%= article.description %></div><hr />
		    <%= link_to "Edit this article", edit_article_path(article), class: "btn btn-primary" %>
			<%= link_to "Delete this article", article_path(article), method: :delete, 
											data: { confirm: "Are you sure you want to delete the article" }, 
											class: "btn btn-danger" %>
		  </div>
		</div><br />
		
	<% end %>



<p><%= link_to "Create new article", new_article_path %></p>