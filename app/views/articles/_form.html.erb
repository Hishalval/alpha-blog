<%= render 'shared/errors', obj: @article %>

<div class="container">
	<div class="col-xs-10">
		<%= form_for @article do |f| %>
		<div class="form-group row"> 
			<div class="col-sm-2 col-form-label">
				<%= f.label :title, class: "fonttitle" %>
			</div>
			<div class="col-sm-10">
				<%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-2 col-form-label">
				<%= f.label :description, class: "fonttitle" %>
			</div>
			<div class="col-sm-10">
				<%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Description of article", autofocus: true %>
			</div>
		</div>
		<div class="form-group row justify-content-between align-items-center">
    		<div class="col-2 offset-2">
				<%= f.submit class: "btn btn-primary btn-lg", type: "submit" %>
			</div>
			<div class="col-4">
				[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]
			</div>
		</div>
		<% end %>
	</div>
</div>

